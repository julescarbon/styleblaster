<%= form_for( @region, :url => @region.new_record? ? "/r/" : "/r/#{@region.name}" ) do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :secret %>
    <%= f.text_field :secret %>
  </div>

  <div>
    <%= f.label :tagline %>
    <%= f.text_field :tagline %>
  </div>

  <div>
    <%= f.label :css, "CSS" %>
    <%= f.text_area :css %>
  </div>

  <div>
    <%= f.label :manifesto %>
    <%= f.text_area :manifesto %>
  </div>

  <div>
    <%= f.label :landscape %>
    <%= f.check_box :landscape %>
    <span>(optimizes layout)</span>
  </div>

  <div>
    <%= f.label :always_on %>
    <%= f.check_box :always_on %>
    <span>(disables night mode)</span>
  </div>

  <div>
    <%= f.label :public %>
    <%= f.check_box :public %>
    <span>(list in header dropdown)</span>
  </div>

  <div>
    <%= f.label :gallery_index, "Gallery index" %>
    <%= f.check_box :gallery_index %>
    <span>(redirect if there won't be any new photos)</span>
  </div>
  
  <div>
    <label></label>
    <%= f.submit "Save Region" %>
  </div>

<% end %>

<style>
label { display: inline-block; vertical-align: top; width: 100px; font-size: 12px; }
div span { display: inline-block; font-size: 10px; color: #666; margin-left: 10px; }
textarea { height: 150px;}
form div { padding: 5px;}
h2 img { margin-bottom: -10px;margin-right:5px;width:50px; }
</style>