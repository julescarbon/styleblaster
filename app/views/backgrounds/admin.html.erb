<%= form_for( Background.new, :url => "/bgz/" ) do |bg| %>

  <div>
    <%= bg.label :name %>
    <%= bg.text_field :name %>
  </div>

	<div>
		<%= bg.label :bg %>
		<%= bg.file_field :bg %>
	</div>
	
  <div>
    <label></label>
    <%= bg.submit %>
  </div>
  
<% end %>

<ul id="bgs">
	<% @bgs.each do |bg| %>
		<li>
			<%= image_tag bg.bg.url(:thumb) %>
			<%= bg.name %>
		</li>
	<% end %>
</ul>